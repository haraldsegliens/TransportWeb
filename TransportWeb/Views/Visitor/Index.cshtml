@model List<TransportWeb.Models.ViewData_TransportRoute>
@{
    ViewBag.Title = "Index";
}
<div class="row" style="margin-top:20px;">
    <a class="btn btn-default" style="width:100%" href="/Transports" role="button">@TransportWeb.Utils.Localization.getText(Context, "transports")</a>
</div>
<div class="row" style="margin-top:20px;">
    <a class="btn btn-default" style="width:100%" href="/Stops" role="button">@TransportWeb.Utils.Localization.getText(Context, "stops")</a>
</div>

@if(Model.Count != 0)
{
    <h3>@TransportWeb.Utils.Localization.getText(Context, "favorite-transports")</h3>
    <div class="list-group">
        @foreach (var transport in Model)
        {
            <a href="/Transport/@transport.Transport.Id" class="list-group-item">
                <h4 class="list-group-item-heading">
                    @if (transport.Transport.Type == "normal")
                    {
                        @TransportWeb.Utils.Localization.getText(Context, "transport")
                        <span class="label label-default">@transport.Transport.Number</span>
                    }
                    else
                    {
                        @TransportWeb.Utils.Localization.getText(Context, "express")
                        <span class="label label-danger">@transport.Transport.Number</span>
                    }
                </h4>
                <p class="list-group-item-text">
                    @transport.FirstRoute.Name
                </p>
            </a>
        }
    </div>
}
